<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
	<display-name>QCM</display-name>
	<welcome-file-list>
		<welcome-file>connexion</welcome-file>
	</welcome-file-list>
	
	<!-- questionControler -->
	<servlet>
		<servlet-name>questionControler</servlet-name>
		<servlet-class>fr.eni.tp.qcm.ihm.controler.QuestionControler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>questionControler</servlet-name>
		<url-pattern>/admin/gestionQuestion</url-pattern>
	</servlet-mapping>
	
	<!-- questionJSP -->
	<servlet>
		<servlet-name>questionJSP</servlet-name>
		<jsp-file>/WEB-INF/jsp/question.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>questionJSP</servlet-name>
		<url-pattern>/question/</url-pattern>
	</servlet-mapping>
	  
	<!-- servlet epreuveControler -->
	<servlet>
		<servlet-name>epreuveControler</servlet-name>
		<servlet-class>fr.eni.tp.qcm.ihm.controler.EpreuveControler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>epreuveControler</servlet-name>
		<url-pattern>/gestion/consulterResultat</url-pattern>
	</servlet-mapping>
	  
	<!-- servlet QuestionController-->
	<servlet>
		<servlet-name>generatorQuestions</servlet-name>
		<servlet-class>fr.eni.tp.qcm.ihm.controler.QuestionController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>generatorQuestions</servlet-name>
		<url-pattern>/generator</url-pattern>
	</servlet-mapping>
	  
	<!--  jsp consulterResultatJSP -->
	<servlet>
		<servlet-name>consulterResultatJSP</servlet-name>
		<jsp-file>/WEB-INF/jsp/consulterResultat.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>consulterResultatJSP</servlet-name>
		<url-pattern>/consulterResultat</url-pattern>
	</servlet-mapping>
	
	<!--  jsp consulterTestControler -->
	<servlet>
		<servlet-name>consulterTestControler</servlet-name>
		<servlet-class>fr.eni.tp.qcm.ihm.controler.ConsulterTestControler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>consulterTestControler</servlet-name>
		<url-pattern>/selectionnerTest</url-pattern>
	</servlet-mapping>
	
	<!--  jsp selectionnerTestJSP -->
	<servlet>
		<servlet-name>selectionnerTestJSP</servlet-name>
		<jsp-file>/WEB-INF/jsp/selectionnerTest.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>selectionnerTestJSP</servlet-name>
		<url-pattern>/consulterTest</url-pattern>
	</servlet-mapping>
	  
	<!--  jsp detailTestControler -->
	<servlet>
		<servlet-name>detailTestControler</servlet-name>
		<servlet-class>fr.eni.tp.qcm.ihm.controler.DetailTestControler</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>detailTestControler</servlet-name>
		<url-pattern>/detailTest</url-pattern>
	</servlet-mapping>
	  
	<!--  jsp consulterDetailTestJSP -->
	<servlet>
		<servlet-name>consulterDetailTestJSP</servlet-name>
		<jsp-file>/WEB-INF/jsp/consulterDetailTest.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>consulterDetailTestJSP</servlet-name>
		<url-pattern>/consulterDetailTest</url-pattern>
	</servlet-mapping>
	  
	<!--  jsp connexionJSP -->
	<servlet>
		<servlet-name>connexion</servlet-name>
		<jsp-file>/WEB-INF/connexion.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>connexion</servlet-name>
		<url-pattern>/connexion</url-pattern>
	</servlet-mapping>
	  
	<!--  jsp accueilJSP -->
	<servlet>
		<servlet-name>accueil</servlet-name>
		<jsp-file>/WEB-INF/jsp/accueil.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>accueil</servlet-name>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>
	 
	<!--  jsp logoutController --> 
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>fr.eni.tp.qcm.ihm.controler.Deconnexion</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	  
	<!--  jsp loginController --> 
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>fr.eni.tp.qcm.ihm.controler.Connexion</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	  
	<!-- filter -->
	<filter>
	<filter-name>RestrictionFilter</filter-name>
	<filter-class>fr.eni.tp.qcm.filters.RestrictionFilter</filter-class>
	</filter>
	<filter-mapping>
	<filter-name>RestrictionFilter</filter-name>
	<url-pattern>/*</url-pattern>
	</filter-mapping>
	  
	<!-- error -->
	<error-page>
		<error-code>400</error-code>
		<location>/forward/listeArticle/new</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/technicalError</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error/accessDenied</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error/pageNotFound</location>
	</error-page>
</web-app>