    <servlet-name>login</servlet-name>
    <servlet-class>fr.eni.tp.qcm.ihm.controler.authentification.Connexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
