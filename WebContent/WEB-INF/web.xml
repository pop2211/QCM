    <servlet-name>questionJSP</servlet-name>
    <jsp-file>/WEB-INF/jsp/epreuve/question.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>questionJSP</servlet-name>
    <url-pattern>/epreuve/questionsJSP</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>epreuveControler</servlet-name>
    <servlet-class>fr.eni.tp.qcm.ihm.controler.EpreuveControler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>epreuveControler</servlet-name>
    <url-pattern>/resultats</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>consulterResultatJSP</servlet-name>
    <jsp-file>/WEB-INF/jsp/consulterResultat.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>consulterResultatJSP</servlet-name>
    <url-pattern>/resultatsJSP</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>consulterTestControler</servlet-name>
    <servlet-class>fr.eni.tp.qcm.ihm.controler.epreuve.ConsulterTestControler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>consulterTestControler</servlet-name>
    <url-pattern>/epreuves</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>listeEpreuvesJSP</servlet-name>
    <jsp-file>/WEB-INF/jsp/epreuve/listeEpreuves.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>listeEpreuvesJSP</servlet-name>
    <url-pattern>/epreuvesJSP</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>detailTestControler</servlet-name>
    <servlet-class>fr.eni.tp.qcm.ihm.controler.epreuve.DetailTestControler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>detailTestControler</servlet-name>
    <url-pattern>/epreuve/detailTest</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>consulterDetailTestJSP</servlet-name>
    <jsp-file>/WEB-INF/jsp/epreuve/consulterDetailTest.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>consulterDetailTestJSP</servlet-name>
    <url-pattern>/epreuve/detailTestJSP</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>inscriptionCandidatControler</servlet-name>
    <servlet-class>fr.eni.tp.qcm.ihm.controler.responsable.InscriptionCandidatControler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>inscriptionCandidatControler</servlet-name>
    <url-pattern>/responsable/inscriptionCandidat</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>inscriptionCandidatJSP</servlet-name>
    <jsp-file>/WEB-INF/jsp/responsable/inscriptionCandidat.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>inscriptionCandidatJSP</servlet-name>
    <url-pattern>/responsable/inscriptionCandidatJSP</url-pattern>
