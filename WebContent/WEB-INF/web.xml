    <servlet-class>fr.eni.tp.qcm.ihm.controler.authentification.Deconnexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
