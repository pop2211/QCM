<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>QCM</display-name>
  <welcome-file-list>
    <welcome-file>connexion</welcome-file>
  </welcome-file-list>
  
  <servlet>
	<servlet-name>connexion</servlet-name>
	<jsp-file>/WEB-INF/jsp/connexion.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
	<servlet-name>connexion</servlet-name>
	<url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  
  <servlet>
	<servlet-name>accueil</servlet-name>
	<jsp-file>/WEB-INF/jsp/accueil.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
	<servlet-name>accueil</servlet-name>
	<url-pattern>/accueil</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>fr.eni.tp.qcm.ihm.controler.Connexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>400</error-code>
    <location>/forward/listeArticle/new</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error/technicalError</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/error/accessDenied</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error/pageNotFound</location>
  </error-page>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>DefaultDenyForwards</web-resource-name>
      <url-pattern>/forward/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>NoAccess</role-name>
    </auth-constraint>
  </security-constraint>
</web-app>