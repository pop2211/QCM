<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>QCM</display-name>
  <welcome-file-list>
    <welcome-file>connexion</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>questionControler</servlet-name>
    <servlet-class>fr.eni.tp.qcm.ihm.controler.epreuve.QuestionControler</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>questionControler</servlet-name>
    <url-pattern>/epreuve/questions</url-pattern>
  </servlet-mapping>
